    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Master",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "--port",
                "6379",
                "--dir",
                "/tmp/redis-files",
                "--dbfilename",
                "redis.rdb",
            ]
        },
        {
            "name": "Run Slave",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "--port",
                "6378",
                "replicaof",
                "localhost:6379"
            ]
        }
    ]
}